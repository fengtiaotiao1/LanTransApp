<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/activity_choose_bar"
        layout="@layout/layout_choose_file_title"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_choose_bar"
        android:background="@color/colorWhite"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_choose_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_below="@id/tl_activity_tab_layout"
        android:layout_above="@id/activity_bottom_bar">

    </android.support.v4.view.ViewPager>

    <include
        android:id="@+id/activity_bottom_bar"
        layout="@layout/layout_bottom_bar"/>



</RelativeLayout>